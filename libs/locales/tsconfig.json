  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "rootDirs": ["@types", "lib"],
    "skipLibCheck": true,
    "tsBuildInfoFile": "node_modules/.cache/tsc/tsconfig.tsbuildinfo"
  },
  "include": ["@types/*.d.ts", "lib/**/*.json"]
}
