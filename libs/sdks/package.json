{
  "name": "@openshift-assisted/sdks",
  "version": "1.0.0",
  "exports": {
    "./package.json": "./package.json",
    "./assisted-installer-service": {
      "source": "./assisted-installer-service/index.ts",
      "default": "./assisted-installer-service/index.js"
    },
    "./accounts-management-service": {
      "source": "./accounts-management-service/index.ts",
      "default": "./accounts-management-service/index.js"
    },
    "./authorization-service": {
      "source": "./authorization-service/index.ts",
      "default": "./authorization-service/index.js"
    }
  },
  "dependencies": {
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "tsc --build --verbose",
    "clean": "yarn run -T rimraf ./*-service/**/*.{d.ts,js,map} node_modules/.cache/tsc/*.tsbuildinfo",
    "format:fix": "yarn run format:all --write",
    "lint:fix": "yarn run lint:all --fix",
    "generate-sdk:all": "openapi-generator-cli generate",
    "generate-sdk:production:assisted-installer-service": "openapi-generator-cli generate --generator-key prod:assisted-installer-service",
    "generate-sdk:production:accounts-management-service": "openapi-generator-cli generate --generator-key prod:accounts-management-service",
    "generate-sdk:production:authorization-service": "openapi-generator-cli generate --generator-key prod:authorization-service"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "accounts-management-service/**/*.js",
    "accounts-management-service/**/*.d.ts",
    "assisted-installer-service/**/*.js",
    "authorization-service/**/*.js"
  ],
  "type": "module"
}
