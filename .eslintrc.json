{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": [
      "apps/*/tsconfig.eslint.json",
      "libs/*/tsconfig.eslint.json",
      "tools/*/tsconfig.eslint.json"
    ]
  },
  "rules": {
    "eqeqeq": ["error", "always"],
    "indent": "off",
    "no-debugger": "error",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  },
  "ignorePatterns": [
    "apps/*/build",
    "libs/*/build",
    "tools/*/build",
    "apps/*/dist",
    "libs/*/dist",
    "tools/*/dist"
  ]
}
