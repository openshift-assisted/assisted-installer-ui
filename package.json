{
  "name": "openshift-assisted-ui-lib",
  "version": "2.1.0-1",
  "description": "React component library for the Bare Metal Installer",
  "license": "Apache-2.0",
  "repository": "openshift-assisted/assisted-ui-lib",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./index.css": "./dist/index.css",
    "./cim": "./dist/cim/index.js",
    "./ocm": "./dist/ocm/index.js"
  },
  "typesVersions": {
    "*": {
      "cim": [
        "./dist/src/cim/index.d.ts"
      ],
      "ocm": [
        "./dist/src/ocm/index.d.ts"
      ]
    }
  },
  "module": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/src/index.d.ts",
  "engines": {
    "node": ">=12.16"
  },
  "scripts": {
    "clean": "rimraf dist",
    "esbuild:prod": "node ./scripts/esbuild/prod.js",
    "esbuild:dev": "node ./scripts/esbuild/dev.js",
    "prebuild": "run-s clean test",
    "build": "run-s clean esbuild:prod",
    "start": "run-s clean esbuild:dev",
    "start-assisted-ui": "env-cmd ./scripts/start-assisted-ui.sh",
    "start-uhc-portal": "./scripts/start-uhc-portal.sh",
    "sync-to-ui": "./scripts/sync-dist.sh",
    "prepare": "install-peers",
    "test": "run-s test:circular test:lint test:type-check",
    "test:type-check": "tsc --noEmit",
    "test:lint": "eslint --ext .js,.jsx,.ts,.tsx --color --max-warnings=0 ./src",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:circular": "dpdm --warning false --tree false --exit-code circular:1 src/index.ts",
    "test:watch": "react-scripts test --env=jsdom",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --color --fix ./src",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,json,md,scss,yaml,yml}'",
    "update-api": "curl https://raw.githubusercontent.com/openshift/assisted-service/master/swagger.yaml > src/common/api/swagger.yaml",
    "postupdate-api": "yarn swagger",
    "swagger": "sw2dts -w -o src/common/api/types.ts src/common/api/swagger.yaml",
    "postswagger": "sed -i -r 's/([a-z1-9]+)_([a-z])/\\1\\U\\2/g' src/common/api/types.ts && yarn prettier"
  },
  "peerDependencies": {
    "@patternfly/react-code-editor": "^4.2.92",
    "@patternfly/react-core": "^4.135.0",
    "@patternfly/react-icons": "^4.11.0",
    "@patternfly/react-styles": "^4.12.5",
    "@patternfly/react-table": "^4.29.0",
    "@patternfly/react-tokens": "^4.12.0",
    "@reduxjs/toolkit": "^1.5",
    "@sentry/browser": "^5.9 || ^6.0",
    "axios": ">=0.19.2 <1.0.0",
    "i18next": "^20.4.0 || ^21.0",
    "i18next-browser-languagedetector": "^6.1.2",
    "lodash": "^4.17.15",
    "react": "^16.14.0 || ^17.0",
    "react-dom": "^16.13.1 || ^17.0",
    "react-i18next": "^11.11.4",
    "react-monaco-editor": "^0.43.0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-tagsinput": "3.19.x",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "swr": ">=0.5.6 <2",
    "uuid": "^8.1.0",
    "yup": "^0.28.3"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.16.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/classnames": "^2.3.1",
    "@types/file-saver": "^2.0.1",
    "@types/human-date": "^1.4.0",
    "@types/humanize-plus": "^1.8.0",
    "@types/jest": "^25.1.4",
    "@types/js-yaml": "^4.0.1",
    "@types/lodash": "^4.14.121",
    "@types/node": "^12.12.38",
    "@types/react-autosuggest": "^10.1.5",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-tagsinput": "^3.19.7",
    "@types/uuid": "^8.0.0",
    "@types/yup": "^0.26.9",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-eslint": "^10.0.3",
    "concurrently": "^5.3.0",
    "console-sdk-ai-lib": "0.0.1",
    "cross-env": "^7.0.2",
    "dpdm": "^3.8.0",
    "env-cmd": "^10.1.0",
    "esbuild": "^0.13.9",
    "esbuild-plugin-d.ts": "^1.0.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "install-peers-cli": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react-scripts": "^3.4.1",
    "redux-devtools-extension": "^2.13.8",
    "rimraf": "^3.0.2",
    "sw2dts": "^2.6.3",
    "typescript": "^3.8.3"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "facet-lib",
    "openshift",
    "assisted-ui",
    "assisted-ui-lib",
    "library"
  ],
  "dependencies": {
    "axios-case-converter": "^0.8.1",
    "classnames": "^2.3.1",
    "file-saver": "^2.0.2",
    "filesize.js": "^2.0.0",
    "formik": "2.2.6",
    "fuse.js": "^6.4.6",
    "human-date": "^1.4.0",
    "humanize-plus": "^1.8.2",
    "ip-address": "^7.1.0",
    "is-cidr": "^4.0.2",
    "is-in-subnet": "^3.1.0",
    "js-yaml": "^4.1.0",
    "prism-react-renderer": "^1.1.1",
    "unique-names-generator": "^4.2.0"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(react-monaco-editor|monaco-editor))"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  }
}
