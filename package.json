{
  "name": "facet-lib",
  "version": "1.0.24",
  "description": "React component library for the Bare Metal Installer",
  "author": "mareklibra",
  "license": "Apache-2.0",
  "repository": "mareklibra/facet-lib",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prebuild": "run-s test",
    "build": "microbundle-crl --no-compress --format modern,cjs --css-modules false",
    "start": "echo Consider running: yarn sync-to-facet ; echo ; microbundle-crl watch --no-compress --format modern,cjs --css-modules false",
    "sync-to-facet": "FACET_ROOT=../facet ./scripts/sync-dist.sh",
    "prepare": "install-peers",
    "test": "run-s test:circular test:lint",
    "test:lint": "eslint --ext .js,.jsx,.ts,.tsx --color ./src",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:circular": "dpdm --warning false --tree false src/index.ts | grep 'no circular dependency were found'",
    "test:watch": "react-scripts test --env=jsdom",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --color --fix ./src",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,json,md,scss,yaml,yml}'",
    "update-api": "curl https://raw.githubusercontent.com/filanov/bm-inventory/master/swagger.yaml > src/api/swagger.yaml",
    "postupdate-api": "yarn swagger",
    "swagger": "sw2dts -w -o src/api/types.ts src/api/swagger.yaml",
    "postswagger": "sed -i -r 's/([a-z1-9]+)_([a-z])/\\1\\U\\2/g' src/api/types.ts && yarn prettier"
  },
  "peerDependencies": {
    "@patternfly/patternfly": "^4.10.31",
    "@patternfly/react-core": "^4.18.8",
    "@patternfly/react-icons": "^3.15.12",
    "@patternfly/react-table": "^4.5.10",
    "@patternfly/react-tokens": "^4.4.4",
    "@reduxjs/toolkit": "^1.3.5",
    "axios": "^0.19.2",
    "file-saver": "^2.0.2",
    "formik": "^2.1.4",
    "http-proxy-middleware": "^1.0.3",
    "humanize-plus": "^1.8.2",
    "lodash": "^4.17.15",
    "netmask": "^1.0.6",
    "prism-react-renderer": "^1.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "uuid": "^8.1.0",
    "yup": "^0.28.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/file-saver": "^2.0.1",
    "@types/human-date": "^1.4.0",
    "@types/humanize-plus": "^1.8.0",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.121",
    "@types/netmask": "^1.0.30",
    "@types/node": "^12.12.38",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/uuid": "^8.0.0",
    "@types/yup": "^0.26.9",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "dpdm": "^3.4.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "install-peers-cli": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react-scripts": "^3.4.1",
    "redux-devtools-extension": "^2.13.8",
    "sw2dts": "^2.6.3",
    "typescript": "^3.8.3"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "facet-lib",
    "library"
  ],
  "dependencies": {
    "axios-case-converter": "^0.6.0",
    "unique-names-generator": "^4.2.0"
  }
}
