{
  "compilerOptions": {
    "jsx": "react-jsx",
    "sourceMap": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "strict": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "references": [{ "path": "../../libs/chatbot" }]
}
